<% if end_user_signed_in? %>
	<% if answer.favorited_by?(current_end_user) %>
		<p><span>お気に入り解除: </span><%=link_to  question_answer_favorites_path(question_answers, answer), method: :delete, remote: true do %>
			<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
			<% end %>
			<%=answer.favorites.count %>
		</p>
	<% else %>
		<p><span>お気に入り登録: </span><%=link_to  question_answer_favorites_path(question_answers, answer), method: :post, remote: true do %>
			<i class="fa fa-heart-o" aria-hidden="true"></i></i>
			<% end %>
			<%=answer.favorites.count %>
		</p>
	<% end %>
	<% else %>
	<p><span>お気に入り数: </span><%= answer.favorites.count %></p>
<% end %>