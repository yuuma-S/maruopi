<h1>回答投稿</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= form_for [@question, @answer], url: question_answers_path do |form| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
      <% @answer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title, class: "form-control" %>

  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, rows:15, id:"input-text", class: "form-control"  %>
      <p id="counter">0文字（最大3000文字）</p>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-default" %>
    <%= link_to 'back', question_path(@question), class: "btn btn-default" %>
  </div>
<% end %>

    </div>
  </div>
</div>
