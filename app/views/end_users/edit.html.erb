<h2>ユーザー情報編集</h2>
<%= form_with(model: @end_user, local: true) do |form| %>
    <% if @end_user.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@end_user.errors.count, "error") %> prohibited this question from being saved:</h2>

            <ul>
                <% @end_user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="clearfix">
        <div class="col-sm-6">
            <div class="field">
                <%= form.label :name  %>
                <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="field">
                <%= form.label :email %>
                <%= form.text_area :email, class: "form-control" %>
            </div>

            <div class="actions">
                <%= form.submit '保存' %>
            </div>
        </div>
    </div>
<% end %>



<%= link_to 'Show', @end_user, class: "btn btn-default" %> |
<%= link_to 'Back', end_users_path, class: "btn btn-default" %>
